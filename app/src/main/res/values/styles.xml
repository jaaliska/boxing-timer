<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MyLightTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:textColor">@color/colorBold</item>
        <item name="android:buttonStyle">@style/button_light</item>
        <item name="android:navigationBarColor">@color/colorLight</item>
        <item name="android:colorPrimaryDark">@color/colorAccent</item>
    </style>

    <style name="MyDarkTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/button_dark</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:navigationBarColor">@color/colorBold</item>
        <item name="android:colorPrimaryDark">@color/colorBold</item>
    </style>

    <style name="button_light">
        <item name="android:background">@drawable/orange_lite_border</item>
    </style>

    <style name="button_dark">
        <item name="android:background">@drawable/orange_dark_border</item>
    </style>

</resources>